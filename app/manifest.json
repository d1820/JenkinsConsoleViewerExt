{
  "name": "JenkinsPlusExt",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extension to be able to view the console output from the current build list job page",
  "icons": {
    "16": "images/Jenkins_logo-16.png",
    "128": "images/Jenkins_logo-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardWrite"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/jquery.js",
        "scripts/jquery.ui.resizable.min.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/Jenkins_logo-20.png",
      "38": "images/Jenkins_logo-38.png"
    },
    "default_title": "Jenkins Plus",
    "default_popup": "popup.html"
  }
}
