{
    "name": "Jenkins Plus",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Extension that adds missing functionality to Jenkins",
    "key": "",
    "icons": {
        "16": "images/Jenkins_logo-16.png",
        "128": "images/Jenkins_logo-128.png"
    },
    "background": {
        "scripts": [
            "scripts/jquery.min.js",
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
    "web_accessible_resources": [
        "images/*",
        "templates.html",
        "mock.html",
        "fonts/*"
    ],
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage",
        "clipboardWrite",
        "management"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "css": ["styles/jpconsole.css"],
        "js": [
            "scripts/jquery.min.js",
            "scripts/jquery.ui.resizable.min.js",
            "scripts/toastr.min.js",
            "scripts/contentscript.js"
        ],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_icon": {
            "19": "images/Jenkins_logo-20.png",
            "38": "images/Jenkins_logo-38.png"
        },
        "default_title": "Jenkins Plus",
        "default_popup": "popup.html"
    }
}
